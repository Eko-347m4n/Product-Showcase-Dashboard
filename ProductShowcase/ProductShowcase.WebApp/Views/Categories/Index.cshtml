@model IEnumerable<ProductShowcase.Core.Models.Category>

@{ ViewData["Title"] = "Categories"; }

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fas fa-tags me-2"></i>Categories</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fas fa-plus me-2"></i>Create New</a>
</div>

<div class="list-group">
    @foreach (var item in Model)
    {
        <div class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
            <h5 class="mb-1">@item.Name</h5>
            <div>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary"><i class="fas fa-edit me-1"></i>Edit</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger"><i class="fas fa-trash-alt me-1"></i>Delete</a>
            </div>
        </div>
    }
</div>
